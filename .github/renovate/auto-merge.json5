{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "Auto merge GitHub Actions",
      "matchManagers": ["github-actions"],
      "matchDatasources": ["github-tags"],
      "automerge": true,
      "ignoreTests": true,
      "matchUpdateTypes": ["minor", "patch"],
    },
    {
      "description": "Auto merge up to minor in dev",
      "matchFileNames": ["dev/**"],
      "automerge": true,
      "matchUpdateTypes": ["minor", "patch"],
    },
    {
      // NOTE: minimumReleaseAge does not work for non-Docker Hub images for now
      // https://docs.renovatebot.com/configuration-options/#minimumreleaseage
      // Since Karpenter is a critical component, automerge is disabled for now
      "description": "Disable auto merge for Karpenter helm",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["public.ecr.aws/karpenter/karpenter"],
      "automerge": false,
    },
  ]
}
